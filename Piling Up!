from collections import deque

t = int(input())

for _ in range(t):
    n = int(input())
    cubes = deque(map(int, input().split()))
    
    last = float('inf')
    possible = True
    
    while cubes:
        if cubes[0] <= last and cubes[-1] <= last:
            last = max(cubes.popleft(), cubes.pop())
        elif cubes[0] <= last:
            last = cubes.popleft()
        elif cubes[-1] <= last:
            last = cubes.pop()
        else:
            possible = False
            break
    
    print("Yes" if possible else "No")
